<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards">
    <description>PHP_CodeSniffer rules for WordPress Coding Standards.</description>


   <rule ref="WordPress"/>
   <!-- <ruleset name="CustomRuleset">
        <rule ref="WordPress"/>
        <rule ref="PSR4"/>
        <file>src</file>
    </ruleset> -->

    <!-- Exclude files and directories -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>

    <fileExtensions>php,inc</fileExtensions>

    <file>src</file>

    <config name="severity" value="5"/>
    <config name="error_severity" value="5"/>
    <config name="warning_severity" value="5"/>

</ruleset>